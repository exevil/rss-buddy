[flake8]
# Maximum line length
max-line-length = 100

# Maximum file length
max-file-length = 300

# Directories to exclude
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    dist,
    build,
    docs/conf.py

# Ignore specific errors and warnings
ignore =
    # Line break before binary operator (W503)
    W503,
    # Missing docstring in __init__ (D107)
    D107,
    # One-line docstring should fit on one line with quotes (D200)
    D200

# Docstring style
docstring-convention = google

# Import order style
import-order-style = google

# Application names for import order
application-import-names = rss_buddy

# Additional plugins
enable-extensions = 
    G

# Maximum complexity level
max-complexity = 12

# Output formatting
format = ${cyan}%(path)s${reset}:${yellow_bold}%(row)d${reset}:${green_bold}%(col)d${reset}: ${red_bold}%(code)s${reset} %(text)s 
